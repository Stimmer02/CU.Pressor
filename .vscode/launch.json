        {
            "name": "Debug Host Code",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/source/compressor_CUDA/src/a.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
